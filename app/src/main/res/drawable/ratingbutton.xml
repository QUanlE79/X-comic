<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="90dip" />
            <stroke android:width="1dip" android:color="@color/golden" />
            <gradient android:angle="-90" android:startColor="@color/golden" android:endColor="@color/yellow_green"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="90dip" />
            <stroke android:width="1dip" android:color="@color/yellow_green" />
            <solid android:color="@color/yellow_green"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="90dip" />
            <stroke android:width="1dip" android:color="@color/golden" />
            />
        </shape>
    </item>
</selector>